<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:background="#F8E5A0">

    <ImageView
        android:id="@+id/image_logo"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/taskwave_logo"
        android:contentDescription="@string/logo_content_desc" />

    <ImageView
        android:id="@+id/image_illustration"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/person_tablet"
        android:contentDescription="@string/illustration_2_content_desc" />

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro_title_2"
        android:textSize="24sp"
        android:textColor="#1A3C5E" />

    <TextView
        android:id="@+id/text_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/intro_description_2"
        android:textSize="16sp"
        android:textColor="#1A3C5E" />
</LinearLayout>
