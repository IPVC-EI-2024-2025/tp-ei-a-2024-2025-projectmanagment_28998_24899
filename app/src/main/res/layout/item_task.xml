<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:padding="12dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <TextView android:id="@+id/text_task_title" android:textSize="18sp" android:textStyle="bold"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/text_task_description" android:textSize="14sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/text_task_status" android:textSize="14sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
    <TextView android:id="@+id/text_task_due_date" android:textSize="14sp"
        android:layout_width="wrap_content" android:layout_height="wrap_content"/>
</LinearLayout>
