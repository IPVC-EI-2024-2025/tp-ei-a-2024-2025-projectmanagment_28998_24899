<resources>
    <!-- Tema principal da aplicação -->
    <style name="Theme.TaskWave" parent="Theme.MaterialComponents.Light.DarkActionBar">
        <item name="colorPrimary">@color/button_orange</item>
        <item name="colorPrimaryDark">@color/logo_blue</item>
        <item name="colorAccent">@color/button_orange</item>
        <item name="android:windowBackground">@color/background_white</item>

        <!-- Atributos de TextAppearance obrigatórios -->
        <item name="textAppearanceHeadline1">@style/TextAppearance.TaskWave.Headline1</item>
        <item name="textAppearanceHeadline2">@style/TextAppearance.TaskWave.Headline2</item>
        <item name="textAppearanceHeadline3">@style/TextAppearance.TaskWave.Headline3</item>
        <item name="textAppearanceHeadline4">@style/TextAppearance.TaskWave.Headline4</item>
        <item name="textAppearanceHeadline5">@style/TextAppearance.TaskWave.Headline5</item>
        <item name="textAppearanceHeadline6">@style/TextAppearance.TaskWave.Headline6</item>
        <item name="textAppearanceSubtitle1">@style/TextAppearance.TaskWave.Subtitle1</item>
        <item name="textAppearanceSubtitle2">@style/TextAppearance.TaskWave.Subtitle2</item>
        <item name="textAppearanceBody1">@style/TextAppearance.TaskWave.Body1</item>
        <item name="textAppearanceBody2">@style/TextAppearance.TaskWave.Body2</item>
        <item name="textAppearanceButton">@style/TextAppearance.TaskWave.Button</item>
        <item name="textAppearanceCaption">@style/TextAppearance.TaskWave.Caption</item>
        <item name="textAppearanceOverline">@style/TextAppearance.TaskWave.Overline</item>
    </style>

    <!-- Definições dos estilos de TextAppearance -->
    <style name="TextAppearance.TaskWave.Headline1" parent="TextAppearance.MaterialComponents.Headline1" />
    <style name="TextAppearance.TaskWave.Headline2" parent="TextAppearance.MaterialComponents.Headline2" />
    <style name="TextAppearance.TaskWave.Headline3" parent="TextAppearance.MaterialComponents.Headline3" />
    <style name="TextAppearance.TaskWave.Headline4" parent="TextAppearance.MaterialComponents.Headline4" />
    <style name="TextAppearance.TaskWave.Headline5" parent="TextAppearance.MaterialComponents.Headline5" />
    <style name="TextAppearance.TaskWave.Headline6" parent="TextAppearance.MaterialComponents.Headline6" />
    <style name="TextAppearance.TaskWave.Subtitle1" parent="TextAppearance.MaterialComponents.Subtitle1" />
    <style name="TextAppearance.TaskWave.Subtitle2" parent="TextAppearance.MaterialComponents.Subtitle2" />
    <style name="TextAppearance.TaskWave.Body1" parent="TextAppearance.MaterialComponents.Body1" />
    <style name="TextAppearance.TaskWave.Body2" parent="TextAppearance.MaterialComponents.Body2" />
    <style name="TextAppearance.TaskWave.Button" parent="TextAppearance.MaterialComponents.Button" />
    <style name="TextAppearance.TaskWave.Caption" parent="TextAppearance.MaterialComponents.Caption" />
    <style name="TextAppearance.TaskWave.Overline" parent="TextAppearance.MaterialComponents.Overline" />

    <style name="Theme.TaskWave.NoActionBar" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="colorPrimary">@color/button_orange</item>
        <item name="colorPrimaryDark">@color/logo_blue</item>
        <item name="colorAccent">@color/button_orange</item>
        <item name="android:windowBackground">@color/background_white</item>
    </style>

    <style name="CustomTextInputStyle" parent="Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="boxStrokeColor">@color/button_orange</item>
        <item name="boxCornerRadiusTopStart">12dp</item>
        <item name="boxCornerRadiusTopEnd">12dp</item>
        <item name="boxCornerRadiusBottomStart">12dp</item>
        <item name="boxCornerRadiusBottomEnd">12dp</item>
        <item name="boxBackgroundColor">@android:color/transparent</item>
    </style>

    <style name="CardInfoStyle">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/card_bg</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:padding">12dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>

    <style name="TextInfoStyle">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_marginStart">8dp</item>
    </style>


</resources>